config samba
	option name 'OpenWrt'
	option workgroup 'WORKGROUP'
	option description 'OpenWrt Share'
	option homes '0'
	option enabled '1'
	option autoshare '0'

config sambashare
	option browseable 'yes'
	option name 'ROOTFS'
	option path '/'
	option read_only 'no'
	option guest_ok 'yes'
	option create_mask '0666'
	option dir_mask '0777'
